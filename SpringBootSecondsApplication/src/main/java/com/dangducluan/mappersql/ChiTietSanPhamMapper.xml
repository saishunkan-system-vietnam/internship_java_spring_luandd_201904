<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dangducluan.mapper.ChiTietSanPhamMapper">
	<insert id="themThongTinChiTietSanPham" parameterType="ChiTietSanPham" useGeneratedKeys="true" keyColumn="machitietsanpham" keyProperty="maChiTietSanPham">
		insert into chitietsanpham(masanpham,masize,mamau) values(#{sanPham.masanpham},#{sizeSanPham.masize},#{mauSanPham.mamau})
	</insert>
	<delete id="xoaThongTinChiTietSanPham" parameterType="int">
		delete from chitietsanpham where masanpham = #{maSanPham}
	</delete>
</mapper>